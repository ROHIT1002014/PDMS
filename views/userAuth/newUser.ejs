<%- include('../base/navbar'); -%>

<div class="container newUser my-5">
  <div class="row justify-content-center">
    <div class="col-6">
      <form method="POST" action="/users">
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="inputFirstName">First Name</label>
            <input type="text" name="firstName" class="form-control" id="inputFirstName">
          </div>
          <div class="form-group col-md-6">
            <label for="inputLastName">Last Name</label>
            <input type="text" name="lastName" class="form-control" id="inputLastName">
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="inputEmail4">Email</label>
            <input type="email" name="email" class="form-control" id="inputEmail4">
          </div>
          <div class="form-group col-md-6">
            <label for="inputPhoneNumber">Phone number</label>
            <input type="text" name="phoneNumber" class="form-control" id="inputPhoneNumber">
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="inputCity">City</label>
            <input type="text" name="city" class="form-control" id="inputCity">
          </div>
          <div class="form-group col-md-4">
            <label for="inputState">State</label>
            <select id="inputState" class="form-control">
              <option selected>Choose...</option>
              <option>ALigarh</option>
              <option>Ghaziabaad</option>
              <option>Delhi</option>
              <option>Noida</option>
            </select>
          </div>
          <div class="form-group col-md-2">
            <label for="inputZip">Zip</label>
            <input type="text" name="zipCode" class="form-control" id="inputZip">
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="inputAddress">Address</label>
            <textarea type="text" name="address" class="form-control" rows="2" id="inputAddress" placeholder="1234 Main St"></textarea>
          </div>
          <div class="form-group col-md-6">
            <label for="inputAddress2">Address 2</label>
            <textarea type="text" name="secondAddress" class="form-control" id="inputAddress2" rows="2" placeholder="Apartment, studio, or floor"></textarea>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="inputPassword4">Password</label>
            <input type="password" name="password" class="form-control" id="inputPassword4">
          </div>
          <div class="form-group col-md-6">
            <label for="inputConfirmPassword4">Confirm Password</label>
            <input type="password" name="confirmPassword" class="form-control" id="inputPassword4">
          </div>
        </div>

        <div class="form-group">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck">
            <label class="form-check-label" for="gridCheck">
              Check me out
            </label>
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Sign in</button>
      </form>

    </div>
  </div>
</div>

<%- include('../base/footer'); -%>
